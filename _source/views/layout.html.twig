<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title>{% block title %}Mandango{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/yui.css') }}">
        <link rel="stylesheet" href="{{ asset('css/mandango.css') }}">
        <link rel="stylesheet" href="{{ asset('css/pygments.css') }}">
    </head>
    <body class="yui-skin-sam">
        <div class="wrapper">
            <div id="doc4">
                <div id="hd">
                    <div id="mainHeader" class="clearfix">
                        <h1 class="mainTitle">
                            <a href="{{ path('') }}"><img src="{{ asset('images/logo.png') }}" alt="Mandango" /></a>
                        </h1>
                        <div class="slogan">The easy, powerful and ultrafast ODM for PHP and MongoDB.</div>
                        <ul id="mainNav" class="clearfix">
                            {% set menu_current_tab %}{% block menu_current_tab %}{% endblock %}{% endset %}
                            {% include 'views/menu_tabs.html.twig' with {'current': menu_current_tab} only %}
                        </ul>
                    </div>
                </div>
                <div id="bd">
                    <div class="mainContent">
                        {% block content %}{% endblock %}
                        {% block content_bottom %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <div id="ft">
            <div class="ft_content">
                <ul class="ft_menu">
                    <li class="item">
                        <h2>Mandango</h2>
                        <ul>
                            <li class="first">
                                <a href="{{ path('/') }}">Home</a>
                            </li>
                            <li>
                                <a href="{{ path('/performance.html') }}">Performance</a>
                            </li>
                            <li>
                                <a href="{{ path('/installation.html') }}">Installation</a>
                            </li>
                            <li>
                                <a href="{{ path('/doc/') }}">Documentation</a>
                            </li>
                            <li>
                                <a href="{{ path('/development.html') }}">Development</a>
                            </li>
                            <li>
                                <a href="{{ path('/blog/') }}">Blog</a>
                            </li>
                            <li>
                                <a href="{{ path('/about.html') }}">About</a>
                            </li>
                        </ul>
                    </li>
                    <li class="item">
                        <h2>Powered by</h2>
                        <ul>
                            <li class="first">
                               <a href="http://www.php.net">PHP</a>
                            </li>
                            <li>
                                <a href="http://www.mongodb.org">MongoDB</a>
                            </li>
                            <li>
                                <a href="http://www.symfony.com">Symfony</a>
                            </li>
                            <li>
                                <a href="http://git-scm.com">Git</a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="feed">
                    <a href="{{ path('/blog/feed.xml') }}">
                        <img src="{{ asset('images/feed.png') }}" />
                    </a>
                </div>
            </div>
        </div>
        <a href="http://github.com/mandango"><img style="position: absolute; top: 0; right: 0; border: 0;" src="{{ asset('images/forkme_right_red_aa0000.png') }}" alt="Fork me on GitHub" /></a>
        <script type="text/javascript">

          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-23040635-1']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();

        </script>
        {% block disqus %}{% endblock %}
    </body>
</html>
